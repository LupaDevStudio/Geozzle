#:kivy 2.2.1
#:import PATH_IMAGES tools.path.PATH_IMAGES
#:import PATH_TITLE_FONT tools.path.PATH_TITLE_FONT
#:import TITLE_FONT_SIZE tools.constants.TITLE_FONT_SIZE
#:import SUBTITLE_FONT_SIZE tools.constants.SUBTITLE_FONT_SIZE
#:import MAIN_TEXT_FONT_SIZE tools.constants.MAIN_TEXT_FONT_SIZE
#:import MAIN_BUTTON_FONT_SIZE tools.constants.MAIN_BUTTON_FONT_SIZE
#:import SUB_TEXT_FONT_SIZE tools.constants.SUB_TEXT_FONT_SIZE
#:import TITLE_OUTLINE_WIDTH tools.constants.TITLE_OUTLINE_WIDTH
#:import TITLE_OUTLINE_COLOR tools.constants.TITLE_OUTLINE_COLOR
#:import PATH_TEXT_FONT tools.path.PATH_TEXT_FONT
#:import TEXT_FONT_COLOR tools.constants.TEXT_FONT_COLOR
#:import BOTTOM_BAR_HEIGHT tools.constants.BOTTOM_BAR_HEIGHT


<GameQuestionScreen>:
    
    # Arrow to go back to home screen
    RoundedButtonImage:
        image_path: PATH_IMAGES + "left_arrow.png"
        pos_hint: {"x":0.05, "top":0.975}
        size_hint: (0.1, None)
        height: self.width
        colors: root.continent_color
        on_release: root.go_back_to_home()

    ThreeLives:
        continent_color: root.continent_color
        pos_hint: {"x":0.57, "top":0.98}
        size_hint: (0.4, 0.075)
        number_lives_on: root.number_lives_on

    # Squared non button Text
    CustomButton:
        text: root.text_label
        font_size: MAIN_TEXT_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.8}
        size_hint: (0.75, 0.15)
        disable_button: True
        color_label: root.continent_color

    ColoredRoundedButton:
        background_color: root.background_color
        text: "Catégorie 1"
        font_size: MAIN_BUTTON_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.6}
        size_hint: (0.75, 0.10)
        color_label: root.continent_color

    ColoredRoundedButton:
        background_color: root.background_color
        border: root.continent_color
        text: "Catégorie 2"
        font_size: MAIN_BUTTON_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.45}
        size_hint: (0.75, 0.10)
        color_label: root.continent_color

    ColoredRoundedButton:
        background_color: root.background_color
        text: "Catégorie 3"
        font_size: MAIN_BUTTON_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.3}
        size_hint: (0.75, 0.10)
        color_label: root.continent_color 

    ColoredRoundedButton:
        background_color: (1, 1, 1, 1)
        text: "Indice"
        font_size: MAIN_BUTTON_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.35, "center_y":0.125}
        size_hint: (0.6, 0.125)
        color_label: root.continent_color
        disable_button: True

    # Arrow to go to game summary screen
    RoundedButtonImage:
        image_path: PATH_IMAGES + "right_arrow.png"
        pos_hint: {"center_x":0.85, "center_y":0.125}
        size_hint: (0.2, None)
        height: self.width
        colors: root.continent_color
        on_release: root.go_to_game_summary()
