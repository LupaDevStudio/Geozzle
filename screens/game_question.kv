#:kivy 2.2.1


<GameQuestionScreen>:
    
    # Arrow to go back to home screen
    RoundedButtonImage:
        image_path: PATH_IMAGES + "home.png"
        pos_hint: {"x":0.05, "top":0.975}
        size_hint: (0.1, None)
        height: self.width
        colors: root.continent_color
        on_release: root.go_back_to_home()

    ThreeLives:
        continent_color: root.continent_color
        pos_hint: {"x":0.57, "top":0.98}
        size_hint: (0.4, 0.075)
        number_lives_on: root.number_lives_on
        release_function: root.open_buy_life_popup

    # Title of the screen
    Label:
        text: root.title_label
        font_name: PATH_TITLE_FONT
        font_size: MAIN_TEXT_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.775}
        outline_width: max(SUBTITLE_OUTLINE_WIDTH * root.font_ratio,1)
        outline_color: TITLE_OUTLINE_COLOR
        color: root.continent_color
        size: self.size
        text_size: (root.width*0.9,None)
        shorten: False
        halign: "center"
        valign: "center"
        line_height: 1

    ColoredRoundedButton:
        id: hint_1_button
        background_color: root.background_color
        text: root.hint_1
        font_size: BUTTON_FONT_SIZE
        pos_hint: {"center_x":0.5, "center_y":0.6}
        size_hint: (0.75, 0.10)
        color_label: root.continent_color
        on_release: root.add_clue(root.hint_1)
        font_ratio: root.font_ratio

    ColoredRoundedButton:
        id: hint_2_button
        background_color: root.background_color
        border: root.continent_color
        text: root.hint_2
        font_size: BUTTON_FONT_SIZE
        pos_hint: {"center_x":0.5, "center_y":0.4}
        size_hint: (0.75, 0.10)
        color_label: root.continent_color
        on_release: root.add_clue(root.hint_2)
        font_ratio: root.font_ratio

    ColoredRoundedButton:
        id: hint_3_button
        background_color: root.background_color
        text: root.hint_3
        font_size: BUTTON_FONT_SIZE
        pos_hint: {"center_x":0.5, "center_y":0.2}
        size_hint: (0.75, 0.10)
        color_label: root.continent_color
        on_release: root.add_clue(root.hint_3)
        font_ratio: root.font_ratio

    # Arrow to skip hints
    RoundedButtonImage:
        image_path: PATH_IMAGES + "right_arrow.png"
        pos_hint: {"right":0.95, "y":0.025}
        size_hint: (0.1, None)
        height: self.width
        colors: root.continent_color
        on_release: root.go_to_game_summary(None)
