<GameQuestionScreen>:
    
    # Arrow to go back to home screen
    RoundedButtonImage:
        image_path: PATH_IMAGES + "left_arrow.png"
        pos_hint: {"x":0.05, "top":0.975}
        size_hint: (0.1, None)
        height: self.width
        colors: root.continent_color
        on_release: root.go_back_to_home()

    # Squared non button Text
    CustomButton:
        text: root.text_label
        font_size: MAIN_TEXT_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.8}
        size_hint: (0.75, 0.15)
        disabled: True
        # color: root.continent_color

    # ColoredRoundedButton:
    #     # rgba: root.background_color
    #     text: "Cat√©gorie 1"
    #     font_size: MAIN_TEXT_FONT_SIZE * root.font_ratio
    #     pos_hint: {"center_x":0.5, "center_y":0.6}
    #     size_hint: (0.75, 0.10)


    # Arrow to go to game summary screen
    RoundedButtonImage:
        image_path: PATH_IMAGES + "right_arrow.png"
        pos_hint: {"x":0.8, "top":0.15}
        size_hint: (0.1, None)
        height: self.width
        colors: root.continent_color
        on_release: root.go_to_game_summary()
