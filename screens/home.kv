#:kivy 2.2.1

<HomeScreen>:
    Label:
        id: title_label
        text: "Geozzle"
        font_name: PATH_TITLE_FONT
        font_size: MAIN_TITLE_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.8}
        outline_width: max(TITLE_OUTLINE_WIDTH * root.font_ratio, 1)
        outline_color: TITLE_OUTLINE_COLOR
        color: root.continent_color

    # Play button
    CustomButton:
        id: play_button
        text: root.play_label
        pos_hint: {"center_x":0.5, "center_y":0.5}
        size_hint: (0.5, 0.1)
        release_function: root.play_game
        font_ratio: root.font_ratio
        font_size: MAIN_TEXT_FONT_SIZE
        color_label: root.continent_color

    # Highscore label
    Label:
        text: root.highscore_label
        font_name: root.font_name
        font_size: HIGHSCORE_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.375}
        outline_width: max(SUBTITLE_OUTLINE_WIDTH* root.font_ratio,1)
        outline_color: TITLE_OUTLINE_COLOR
        color: root.continent_color

    # Ranking label
    Label:
        id: ranking
        text: root.ranking_label
        font_name: root.font_name
        font_size: SUB_TEXT_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.3}
        outline_width: max(SUBTITLE_OUTLINE_WIDTH* root.font_ratio,1)
        outline_color: TITLE_OUTLINE_COLOR
        color: root.continent_color
