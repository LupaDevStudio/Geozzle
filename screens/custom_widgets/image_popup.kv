#:kivy 2.2.1
#:set POPUP_EXP 0
#:set POPUP_RADIUS 20
#:set POPUP_TITLE_FONT_SIZE 20

<ImagePopup>:

    RelativeLayout:
        id: popup_layout

        ColoredRoundedButton:
            id: ok_button
            size_hint: (0.4,0.15)
            pos_hint: {"center_x":0.5,"center_y":0.12}
            font_ratio: root.font_ratio
            font_size: SMALL_BUTTON_FONT_SIZE
            text: root.ok_button_label
            text_font_name: PATH_TEXT_FONT
            background_color: root.secondary_color
            color_label: root.primary_color
            release_function: root.release_function

        FlagImage:
            source: root.image_source
            size_hint: (0.6,None)
            pos_hint: {"center_x":0.5,"center_y":0.6}
            primary_color: root.primary_color
            disable_button : True
            opacity: 1 if root.mode == "flag" else 0
            font_ratio: root.font_ratio
            stretch_mode: "width"

        GeojsonImage:
            source: root.image_source
            size_hint: (0.6,None)
            pos_hint: {"center_x":0.5,"center_y":0.6}
            color: root.primary_color
            primary_color: root.primary_color
            disable_button : True
            opacity: 1 if root.mode == "geojson" else 0
            font_ratio: root.font_ratio
            stretch_mode: "width"
