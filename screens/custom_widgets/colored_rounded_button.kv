#:kivy 2.2.1
#:set OUTLINE_RECTANGLE 6

<ColoredRoundedButton>:

    # Background
    canvas.before:
        # Shadow
        Color:
            rgba: 0, 0, 0, 1        
        BoxShadow:
            pos: (0, 0)
            size: self.size
            offset: 5, -5
            spread_radius: -10, -10
            blur_radius: 30
        # Border
        Color:
            rgba: root.color_label
        RoundedRectangle:
            pos: (-OUTLINE_RECTANGLE//2, -OUTLINE_RECTANGLE//2)
            size: (self.size[0]+OUTLINE_RECTANGLE,self.size[1]+OUTLINE_RECTANGLE)
            radius: [12]
        # Rounded rectangle
        Color:
            rgba: root.background_color
        RoundedRectangle:
            pos:(0, 0)
            size:self.size

    # Main text
    Label:
        text: root.text
        font_size: root.font_ratio * root.font_size
        pos: (0,0)
        size: self.size
        shorten: False
        text_size: (root.width*root.text_filling_ratio,None)
        font_name: root.text_font_name
        halign: "center"
        valign: "center"
        line_height: 1
        color: root.color_label



