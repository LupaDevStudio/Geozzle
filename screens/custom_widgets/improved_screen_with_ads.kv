#:kivy 2.2.1

<GeozzleScreen>:

    Label:
        id: title
        text: root.title_screen
        font_name: PATH_TITLE_FONT
        font_size: TITLE_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.85} if not SCREEN_CONTINENT_PROGRESS_BAR in root.dict_type_screen else {"center_x":0.5, "center_y":0.74}
        outline_width: max(TITLE_OUTLINE_WIDTH * root.font_ratio,1)
        outline_color: TITLE_OUTLINE_COLOR
        color: root.continent_color

    RoundedButtonImage:
        id: icon_left_up
        pos_hint: {"x":0.05, "top":0.975}
        size_hint: (LOGO_SIZE, None)
        height: self.width
        colors: root.continent_color

    RoundedButtonImage:
        id: icon_left_down
        pos_hint: {"x":0.05, "y":0.025}
        size_hint: (LOGO_SIZE, None)
        height: self.width
        colors: root.continent_color

    RoundedButtonImage:
        id: icon_right_up
        pos_hint: {"right":0.95, "top":0.975}
        size_hint: (LOGO_SIZE, None)
        height: self.width
        colors: root.continent_color

    RoundedButtonImage:
        id: icon_right_down
        pos_hint: {"right":0.95, "y":0.025}
        size_hint: (LOGO_SIZE, None)
        height: self.width
        colors: root.continent_color

    ThreeLives:
        id: three_lives
        continent_color: root.continent_color
        pos_hint: {"center_x": 0.5, "top":0.975}
        size_hint: (0.33, None)
        height: 0.8*LOGO_SIZE*root.width
        number_lives_on: root.number_lives_on
        font_ratio: root.font_ratio

    Image:
        id: multiplier
        source: root.multiplier_image
        pos_hint: {"right": 0.95, "top":0.975}
        size_hint: (LOGO_SIZE*1.5, None)
        height: self.width
    
    ThreeStars:
        id: country_stars
        pos_hint: {"x": 0.05,"center_y":0.87}
        size_hint: (LOGO_SIZE*1.5, 0.1)
        nb_stars: root.nb_stars_on_current_country
        primary_color: WHITE
        secondary_color: root.continent_color
        contour_color: WHITE
    
    # Number of credits
    Label:
        id: nb_credits_label
        text: root.nb_credits_text
        font_name: root.font_name
        font_size: SMALL_BUTTON_FONT_SIZE * root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.87}
        outline_width: max(SUBTITLE_OUTLINE_WIDTH* root.font_ratio,1)
        outline_color: TITLE_OUTLINE_COLOR
        color: root.continent_color

    ContinentProgressBar:
        id: continent_progress_bar
        continents_list: root.continents_list
        font_ratio: root.font_ratio
        pos_hint: {"center_x":0.5, "center_y":0.81}
        size_hint: (0.8, 0.05)
        cursor_position: root.current_continent_position
        color: root.continent_color
